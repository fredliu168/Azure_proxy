version: '3.1'

services:
  azure_proxy:
    build:
      context: ./
    ports:
      - "8000:8000"
    volumes:
      - ./:/var/azure_openai/workspace/
    environment:
      AZURE_OPENAI_API_KEY: xxxxxxxxxxxxxxxxx
      AZURE_ENDPOINT: "https://xxxxxxxxxxx.openai.azure.com"
      AZURE_OPENAI_API_VERSION: "2023-07-01-preview"
      AUTH_KEY: "xxxxxxxxxxxxxxxxxxxxxxxxx" # 自定义授权